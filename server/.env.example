# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For local: mongodb://localhost:27017/expense-sharing
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/expense-sharing
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/expense-sharing?retryWrites=true&w=majority

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis Configuration (optional - app works without it but with reduced performance)
# For local: redis://localhost:6379
# For Redis Cloud/ElastiCache: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Balance Service Version (set to 'false' to use legacy embedded balances)
USE_BALANCE_V2=true
